<?xml version="1.0" encoding="UTF-8"?>
<highlightDefinition version="2.0">
	<name>HTML</name>

	<blockStartMarker indent="1">(?x)
		(&lt;(?i:div|p|span|h1|h2|h3|h4|h5|h6|a|ul|ol|li(?!n)|head|html|body|dl|dt|dd|table|tr|td|th|form|textarea|button|select|label|fieldset|legend|iframe|video|audio|canvas|script|style|header|footer|article|section|nav|aside|main|figure|figcaption|blockquote|address|pre|code|em|strong|small)(?:[^\n\r&lt;])*(?!&lt;)>(?!&lt;)
		|&lt;!--(?!.*--\s*&gt;)
		)
	</blockStartMarker>
	<blockEndMarker>(?x)
		(^\s*&lt;\/(?i:div|p|span|h1|h2|h3|h4|h5|h6|a|ul|ol|li|head|html|body|dl|dt|dd|table|tr|td|th|form|textarea|button|select|label|fieldset|legend|iframe|video|audio|canvas|script|style|header|footer|article|section|nav|aside|main|figure|figcaption|blockquote|address|pre|code|em|strong|small)&gt;
		|^(?!.*?&lt;!--).*?--\s*&gt;)
	</blockEndMarker>

	<contexts caseSensitive="no">		
		<highlightContext name="comment">
			<startRegEx>&lt;!--</startRegEx>
			<endRegEx>--&gt;</endRegEx>
			<highlightContext name="todos">
				<entryRegEx>(?-i)TODO:|HACK:</entryRegEx> <!-- Note case sensitive -->
			</highlightContext>	
		</highlightContext>

		<highlightContext name="cdata">
			<startRegEx>&lt;!\s*\[CDATA\s*\[</startRegEx>
			<endRegEx>\]\s*\]\s*&gt;</endRegEx>
		</highlightContext>
		
		<highlightContext name="docType">
			<startRegEx>&lt;!</startRegEx>
			<endRegEx>&gt;</endRegEx>
		</highlightContext>
		
		<highlightContext name="escape">
			<startRegEx>&lt;\?</startRegEx>
			<endRegEx>\?&gt;</endRegEx>
		</highlightContext>
					
		<highlightContext name="tag">
			<entryRegEx>(&lt;[^&gt;]*&gt;)</entryRegEx>

			<highlightContext name="stringInTag" fallback="string">
				<entryRegEx>("[^"&gt;&lt;]*")</entryRegEx>
			</highlightContext>

			<highlightContext name="singleStringInTag" fallback="string">
				<entryRegEx>('[^'&gt;&lt;]*')</entryRegEx>
			</highlightContext>

			<highlightContext name="attributeInTag">
				<entryRegEx>([\w-]*)[ \t]*=(?=[ \t]*"[^"&gt;&lt;]*")</entryRegEx>
			</highlightContext>
		</highlightContext>

		<highlightContext name="entity">
			<entryRegEx>(&amp;\w{1,8};)</entryRegEx>
		</highlightContext>
	</contexts>
</highlightDefinition>