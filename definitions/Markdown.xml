<?xml version="1.0" encoding="UTF-8"?>
<highlightDefinition version="2.0">
	<name>Markdown</name>
	<contexts caseSensitive="no">
		<highlightContext name="inlineCode" fallback="code">
			<entryRegEx>\`[^\`\n]+\`</entryRegEx>
		</highlightContext>

		<highlightContext name="doubleUnderscoreEmphasis" fallback="strongEmphasis">
			<startRegEx>(?:^|\W)__[^ \t\n]</startRegEx>
			<endRegEx>__</endRegEx>
		</highlightContext>

		<highlightContext name="doubleStarEmphasis" fallback="strongEmphasis">
			<startRegEx>(?:^|\W)\*\*[^ \t\n]</startRegEx>
			<endRegEx>\*\*</endRegEx>
		</highlightContext>

		<highlightContext name="singleUnderscoreEmphasis" fallback="emphasis">
			<startRegEx>(?:^|\W)_[^ \t\n]</startRegEx>
			<endRegEx>_</endRegEx>
		</highlightContext>

		<highlightContext name="singleStarEmphasis" fallback="emphasis">
			<startRegEx>(?:^|\W)\*[^ \t\n]</startRegEx>
			<endRegEx>\*</endRegEx>
		</highlightContext>

		<highlightContext name="h1atx" fallback="h1">
			<entryRegEx>^#[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h2atx" fallback="h2">
			<entryRegEx>^#{2}[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h3atx" fallback="h3">
			<entryRegEx>^#{3}[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h4atx" fallback="h4">
			<entryRegEx>^#{4}[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h5atx" fallback="h5">
			<entryRegEx>^#{5}[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h6atx" fallback="h6">
			<entryRegEx>^#{6}[ \t]+[^#].+</entryRegEx>
		</highlightContext>
		
		<highlightContext name="linkReferenceDefinition">
		<!-- LINK REFERENCES -->
			<startRegEx>^\[(\w|[ \-#|&amp;&lt;&gt;])+\]:[ \t]*</startRegEx>
			<endRegEx>\n|$</endRegEx>
			
			<highlightContext name="linkReferenceDestination" fallback="url">
				<entryRegEx>(?:https?:\/\/)(?:[\w\-])+\.{1}(?:[a-zA-Z]{2,63})(?:[\/\w-]*)*\/?\??(?:[^ #\n\r]*)?#?(?:[^ \n\r]*)</entryRegEx>
			</highlightContext>
		</highlightContext>
		
		<highlightContext name="link">
		<!--Eg [linkText][linkDestination] STYLING THIS WILL TARGET THE SQUARE BRACKETS ONLY-->
			<entryRegEx>\[(?:(?:\w|[ \-#|&amp;&lt;&gt;])+)\]\[[^\n]+\]</entryRegEx>
			
			<highlightContext name="bracketedLinkText">
			<!--This is [linkText][ DO NOT STYLE THIS-->
				<entryRegEx>(?:\[)(?:(?:\w|[ \-#|&amp;&lt;&gt;])+)(?:\]\[)</entryRegEx>
				
				<highlightContext name="linkText">
				<!--This is the actual text within [linkText]-->
					<entryRegEx>((?:\w|[ \-#|&amp;&lt;&gt;])+)</entryRegEx>
				</highlightContext>
			</highlightContext>
			
			<highlightContext name="linkDestination">
			<!--This is matching within linkDestination]-->
				<entryRegEx>((?:\w|[ \-#|&amp;&lt;&gt;])+)</entryRegEx>
			</highlightContext>
		</highlightContext>
		
		<highlightContext name="inlineLink">
		<!--Eg [linkText](linkDestination) STYLING THIS WILL TARGET THE BRACKETS ONLY-->
			<entryRegEx>\[(?:(?:\w|[ \-#|&amp;&lt;&gt;])+)\]\([^\n]+\)</entryRegEx>
			
			<highlightContext name="bracketedInlineLinkText">
			<!--This is [linkText]( DO NOT STYLE THIS-->
				<entryRegEx>(?:\[)(?:(?:\w|[ \-#|&amp;&lt;&gt;])+)(?:\]\()</entryRegEx>
				
				<highlightContext name="inlineLinkText" fallback="linkText">
				<!--This is the actual text within [linkText]-->
					<entryRegEx>((?:\w|[ \-#|&amp;&lt;&gt;])+)</entryRegEx>
				</highlightContext>
			</highlightContext>
			
			<highlightContext name="inlineLinkDestination" fallback="linkDestination">
			<!--This is matching within linkDestination)-->
				<entryRegEx>((?:\w|[ \-#|&amp;&lt;&gt;])+)</entryRegEx>
			</highlightContext>
		</highlightContext>
		
		<highlightContext name="url">
			<entryRegEx>(?:https?:\/\/)(?:[\w\-])+\.{1}(?:[a-zA-Z]{2,63})(?:[\/\w-]*)*\/?\??(?:[^ #\n\r]*)?#?(?:[^ \n\r]*)</entryRegEx>
		</highlightContext>
		
		<highlightContext name="xojoCodeFence" fallback="codeFence">
		<!-- XOJO CODE FENCES-->
			<startRegEx>^```xojo[ ]*\n</startRegEx>
			<endRegEx>^```(\n|$)</endRegEx>
			
			<highlightContext name="xojoType" fallback="type">
				<keywords>
					<string>Boolean</string>
					<string>Color</string>
					<string>Double</string>
					<string>Integer</string>
					<string>Int8</string>
					<string>UInt8</string>
					<string>Int16</string>
					<string>UInt16</string>
					<string>Int32</string>
					<string>UInt32</string>
					<string>Int64</string>
					<string>UInt64</string>
					<string>Single</string>
					<string>String</string>
					<string>CFString</string>
					<string>Ptr</string>
				</keywords>
			</highlightContext>
			
			<highlightContext name="xojoKeyword" fallback="keyword">
				<keywords>
					<string>#Else</string>
					<string>#ElseIf</string>
					<string>#EndIf</string>
					<string>#If</string>
					<string>#Pragma</string>
					<string>AddHandler</string>
					<string>AddressOf</string>
					<string>And</string>
					<string>Array</string>
					<string>As</string>
					<string>Assigns</string>
					<string>ByRef</string>
					<string>ByVal</string>
					<string>Call</string>
					<string>Case</string>
					<string>Catch</string>
					<string>Class</string>
					<string>Const</string>
					<string>Continue</string>
					<string>CType</string>
					<string>Declare</string>
					<string>Delegate</string>
					<string>Dim</string>
					<string>Do</string>
					<string>DownTo</string>
					<string>Each</string>
					<string>Else</string>
					<string>ElseIf</string>
					<string>End</string>
					<string>Enum</string>
					<string>Event</string>
					<string>Exception</string>
					<string>Exit</string>
					<string>Extends</string>
					<string>False</string>
					<string>Finally</string>
					<string>For</string>
					<string>Function</string>
					<string>Get</string>
					<string>Global</string>
					<string>GoTo</string>
					<string>Handles</string>
					<string>If</string>
					<string>Implements</string>
					<string>In</string>
					<string>Inherits</string>
					<string>Inline68K</string>
					<string>Interface</string>
					<string>Is</string>
					<string>IsA</string>
					<string>Lib</string>
					<string>Loop</string>
					<string>Me</string>
					<string>Mod</string>
					<string>Module</string>
					<string>Namespace</string>
					<string>New</string>
					<string>Next</string>
					<string>Nil</string>
					<string>Not</string>
					<string>Object</string>
					<string>Of</string>
					<string>Optional</string>
					<string>Or</string>
					<string>ParamArray</string>
					<string>Private</string>
					<string>Property</string>
					<string>Protected</string>
					<string>Public</string>
					<string>Raise</string>
					<string>RaiseEvent</string>
					<string>Redim</string>
					<string>RemoveHandler</string>
					<string>Return</string>
					<string>Select</string>
					<string>Self</string>
					<string>Set</string>
					<string>Shared</string>
					<string>Soft</string>
					<string>Static</string>
					<string>Step</string>
					<string>Structure</string>
					<string>Sub</string>
					<string>Super</string>
					<string>Then</string>
					<string>To</string>
					<string>True</string>
					<string>Try</string>
					<string>Until</string>
					<string>Var</string>
					<string>Wend</string>
					<string>While</string>
					<string>With</string>
				</keywords>
			</highlightContext>
			
			<highlightContext name="xojoDouble" fallback="number">
				<entryRegEx>(?&lt;=[^\w.&#x7F;-&#x10F7FF;]|^)(?=\d+\.|\.\d+|\d+e(?:\d|\b))(\d*\.\d*(?:e[-+]?\d*)?|\d+e[-+]?\d*)(?=[^\w.&#x7F;-&#x10F7FF;]|$)</entryRegEx>
			</highlightContext>    	
			
			<highlightContext name="xojoInteger" fallback="number">
				<entryRegEx>(?&lt;=[^\w.&#x7F;-&#x10F7FF;]|^)(?:\d+|&amp;h[[:xdigit:]]*\b|&amp;o[0-7]*\b|&amp;b[01]*\b)(?=[^\w.&#x7F;-&#x10F7FF;]|$)</entryRegEx>
			</highlightContext>
			
			<highlightContext name="xojoPragma" fallback="directive">
				<entryRegEx>#(?:if|elseif|else|endif|pragma)</entryRegEx>
			</highlightContext>        
			
			<highlightContext name="xojoComment" fallback="comment">
				<startRegEx>'|\/\/|\brem\b</startRegEx>
				<endRegEx>[\n\r]</endRegEx>
					<highlightContext name="url" fallback="comment">
						<entryRegEx>(?:https?:\/\/)(?:[\w\-])+\.{1}(?:[a-zA-Z]{2,63})(?:[\/\w-]*)*\/?\??(?:[^ #\n\r]*)?#?(?:[^ \n\r]*)</entryRegEx>
					</highlightContext>
			</highlightContext>
			
			<highlightContext name="xojoString" fallback="string">
				<entryRegEx>"[^"\r\n]*["\r\n]|&amp;u[[:xdigit:]]*\b</entryRegEx>
			</highlightContext>
			
			<highlightContext name="xojoColorRed" fallback="colorRed">
					<entryRegEx>(?&lt;=&amp;c)[[:xdigit:]]{1,2}</entryRegEx>
			</highlightContext>
			
			<highlightContext name="xojoColorGreen" fallback="colorGreen">
					<entryRegEx>(?&lt;=&amp;c[[:xdigit:]]{2})[[:xdigit:]]{1,2}</entryRegEx>
			</highlightContext>
			
			<highlightContext name="xojoColorBlue" fallback="colorBlue">
					<entryRegEx>(?&lt;=&amp;c[[:xdigit:]]{4})[[:xdigit:]]{1,2}</entryRegEx>
			</highlightContext>
		</highlightContext>
		
		<highlightContext name="objoCodeFence" fallback="codeFence" caseSensitive="yes">
		<!-- OBJOSCRIPT CODE FENCES -->
			<startRegEx>^```objo[ ]*\n</startRegEx>
			<endRegEx>^```(\n|$)</endRegEx>
			
			<highlightContext name="objoType" fallback="type">
				<keywords>
					<string>Boolean</string>
					<string>KeyValue</string>
					<string>List</string>
					<string>Nothing</string>
					<string>Number</string>
					<string>String</string>
				</keywords>
			</highlightContext>
			
			<highlightContext name="objoKeyword" fallback="keyword">
				<keywords>
					<string>and</string>
					<string>as</string>
					<string>assert</string>
					<string>breakpoint</string>
					<string>case</string>
					<string>class</string>
					<string>continue</string>
					<string>constructor</string>
					<string>do</string>
					<string>else</string>
					<string>exit</string>
					<string>export</string>
					<string>false</string>
					<string>for</string>
					<string>foreach</string>
					<string>foreign</string>
					<string>function</string>
					<string>if</string>
					<string>import</string>
					<string>in</string>
					<string>is</string>
					<string>loop</string>
					<string>not</string>
					<string>nothing</string>
					<string>or</string>
					<string>return</string>
					<string>static</string>
					<string>super</string>
					<string>switch</string>
					<string>then</string>
					<string>this</string>
					<string>true</string>
					<string>until</string>
					<string>var</string>
					<string>while</string>
					<string>xor</string>
				</keywords>
			</highlightContext>
			
			<highlightContext name="objoComment" fallback="comment">
				<startRegEx>#</startRegEx>
				<endRegEx>[\n\r]</endRegEx>
			</highlightContext>
			
			<highlightContext name="objoNumber" fallback="number">
				<entryRegEx>(?&lt;=[^\w.]|^)(?=\d+|\d+\.|\.\d+|\d+e(?:\d|\b))((?:\d+_\d+)+|\d+|\d*\.\d*(?:e[-+]?\d*)?|\d+e[-+]?\d*)(?=[^\w.]|$)|(?&lt;=[^\w.]|^)(?:\d+|0x[[:xdigit:]]*\b|0b[01]*\b)(?=[^\w.]|$)</entryRegEx>
			</highlightContext>
			
			<highlightContext name="objoString" fallback="string">
				<entryRegEx>"[^"\r\n]*["\r\n]</entryRegEx>
			</highlightContext>
			
			<highlightContext name="objoUppercaseIdentifier" fallback="identifier">
				<entryRegEx>\b[A-Z]\w*</entryRegEx>
			</highlightContext>
			
			<highlightContext name="objoLowercaseIdentifier" fallback="identifier">
				<entryRegEx>\b[a-z]\w*</entryRegEx>
			</highlightContext>
		</highlightContext>
		
		<highlightContext name="genericCodeFence" fallback="codeFence">
			<startRegEx>^```[[:alpha:]]*\n</startRegEx>
			<endRegEx>^```(\n|$)</endRegEx>
			
			<highlightContext name="codeFenceContents">
				<entryRegEx>^(?!```[[:alpha:]]?).*(\n|$)</entryRegEx>
			</highlightContext>
		</highlightContext>
	</contexts>
</highlightDefinition>