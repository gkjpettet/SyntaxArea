<?xml version="1.0" encoding="UTF-8"?>
<highlightDefinition version="2.0">
	<name>Markdown</name>
	<contexts caseSensitive="no">
		<highlightContext name="inlineCode" fallback="code">
			<entryRegEx>\`[^\`\n]+\`</entryRegEx>
		</highlightContext>

		<highlightContext name="doubleUnderscoreEmphasis" fallback="strongEmphasis">
			<startRegEx>__[^ \t\n]</startRegEx>
			<endRegEx>__</endRegEx>

			<highlightContext name="starEmphasisWithinDoubleUnderscoreEmphasis" fallback="strongEmphasis">
				<startRegEx>\*[^ \t\n]</startRegEx>
				<endRegEx>\*</endRegEx>
			</highlightContext>
		</highlightContext>

		<highlightContext name="doubleStarEmphasis" fallback="strongEmphasis">
			<startRegEx>\*\*[^ \t\n]</startRegEx>
			<endRegEx>\*\*</endRegEx>

			<highlightContext name="underscoreEmphasisWithinDoubleStarEmphasis" fallback="emphasis">
				<startRegEx>_[^ \t\n]</startRegEx>
				<endRegEx>_</endRegEx>
			</highlightContext>
		</highlightContext>

		<highlightContext name="singleUnderscoreEmphasis" fallback="emphasis">
			<startRegEx>_[^ \t\n]</startRegEx>
			<endRegEx>_</endRegEx>

			<highlightContext name="doubleStarEmphasisWithinSingleUnderscoreEmphasis" fallback="strongEmphasis">
				<startRegEx>\*\*[^ \t\n]</startRegEx>
				<endRegEx>\*\*</endRegEx>
			</highlightContext>
		</highlightContext>

		<highlightContext name="singleStarEmphasis" fallback="emphasis">
			<startRegEx>\*[^ \t\n]</startRegEx>
			<endRegEx>\*</endRegEx>

			<highlightContext name="doubleUnderscoreEmphasisWithinSingleStarEmphasis" fallback="strongEmphasis">
				<startRegEx>__[^ \t\n]</startRegEx>
				<endRegEx>__</endRegEx>
			</highlightContext>
		</highlightContext>

		<highlightContext name="h1atx" fallback="h1">
			<entryRegEx>^#[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h2atx" fallback="h2">
			<entryRegEx>^#{2}[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h3atx" fallback="h3">
			<entryRegEx>^#{3}[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h4atx" fallback="h4">
			<entryRegEx>^#{4}[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h5atx" fallback="h5">
			<entryRegEx>^#{5}[ \t]+[^#].+</entryRegEx>
		</highlightContext>

		<highlightContext name="h6atx" fallback="h6">
			<entryRegEx>^#{6}[ \t]+[^#].+</entryRegEx>
		</highlightContext>
		
		<highlightContext name="linkReferenceDefinition">
			<startRegEx>^\[[[:alpha:]]| +\]:[ \t]</startRegEx>
			<endRegEx>\n|$</endRegEx>
			
			<highlightContext name="linkReferenceDestination" fallback="url">
				<entryRegEx>(?:https?:\/\/)(?:[\w\-])+\.{1}(?:[a-zA-Z]{2,63})(?:[\/\w-]*)*\/?\??(?:[^ #\n\r]*)?#?(?:[^ \n\r]*)</entryRegEx>
			</highlightContext>
		</highlightContext>
		
		<highlightContext name="url">
			<entryRegEx>(?:https?:\/\/)(?:[\w\-])+\.{1}(?:[a-zA-Z]{2,63})(?:[\/\w-]*)*\/?\??(?:[^ #\n\r]*)?#?(?:[^ \n\r]*)</entryRegEx>
		</highlightContext>
		
		<highlightContext name="xojoCodeFence" fallback="codeFence">
			<startRegEx>^```xojo[ ]*\n</startRegEx>
			<endRegEx>^```(\n|$)</endRegEx>
			
			<highlightContext name="xojoType" fallback="type">
				<keywords>
					<string>Boolean</string>
					<string>Color</string>
					<string>Double</string>
					<string>Integer</string>
					<string>Int8</string>
					<string>UInt8</string>
					<string>Int16</string>
					<string>UInt16</string>
					<string>Int32</string>
					<string>UInt32</string>
					<string>Int64</string>
					<string>UInt64</string>
					<string>Single</string>
					<string>String</string>
					<string>CFString</string>
					<string>Ptr</string>
				</keywords>
			</highlightContext>
			
			<highlightContext name="xojoKeyword" fallback="keyword">
				<keywords>
					<string>#Else</string>
					<string>#ElseIf</string>
					<string>#EndIf</string>
					<string>#If</string>
					<string>#Pragma</string>
					<string>AddHandler</string>
					<string>AddressOf</string>
					<string>And</string>
					<string>Array</string>
					<string>As</string>
					<string>Assigns</string>
					<string>ByRef</string>
					<string>ByVal</string>
					<string>Call</string>
					<string>Case</string>
					<string>Catch</string>
					<string>Class</string>
					<string>Const</string>
					<string>Continue</string>
					<string>CType</string>
					<string>Declare</string>
					<string>Delegate</string>
					<string>Dim</string>
					<string>Do</string>
					<string>DownTo</string>
					<string>Each</string>
					<string>Else</string>
					<string>ElseIf</string>
					<string>End</string>
					<string>Enum</string>
					<string>Event</string>
					<string>Exception</string>
					<string>Exit</string>
					<string>Extends</string>
					<string>False</string>
					<string>Finally</string>
					<string>For</string>
					<string>Function</string>
					<string>Get</string>
					<string>Global</string>
					<string>GoTo</string>
					<string>Handles</string>
					<string>If</string>
					<string>Implements</string>
					<string>In</string>
					<string>Inherits</string>
					<string>Inline68K</string>
					<string>Interface</string>
					<string>Is</string>
					<string>IsA</string>
					<string>Lib</string>
					<string>Loop</string>
					<string>Me</string>
					<string>Mod</string>
					<string>Module</string>
					<string>Namespace</string>
					<string>New</string>
					<string>Next</string>
					<string>Nil</string>
					<string>Not</string>
					<string>Object</string>
					<string>Of</string>
					<string>Optional</string>
					<string>Or</string>
					<string>ParamArray</string>
					<string>Private</string>
					<string>Property</string>
					<string>Protected</string>
					<string>Public</string>
					<string>Raise</string>
					<string>RaiseEvent</string>
					<string>Redim</string>
					<string>RemoveHandler</string>
					<string>Return</string>
					<string>Select</string>
					<string>Self</string>
					<string>Set</string>
					<string>Shared</string>
					<string>Soft</string>
					<string>Static</string>
					<string>Step</string>
					<string>Structure</string>
					<string>Sub</string>
					<string>Super</string>
					<string>Then</string>
					<string>To</string>
					<string>True</string>
					<string>Try</string>
					<string>Until</string>
					<string>Var</string>
					<string>Wend</string>
					<string>While</string>
					<string>With</string>
				</keywords>
			</highlightContext>
			
			<highlightContext name="xojoDouble" fallback="number">
				<entryRegEx>(?&lt;=[^\w.&#x7F;-&#x10F7FF;]|^)(?=\d+\.|\.\d+|\d+e(?:\d|\b))(\d*\.\d*(?:e[-+]?\d*)?|\d+e[-+]?\d*)(?=[^\w.&#x7F;-&#x10F7FF;]|$)</entryRegEx>
			</highlightContext>    	
			
			<highlightContext name="xojoInteger" fallback="number">
				<entryRegEx>(?&lt;=[^\w.&#x7F;-&#x10F7FF;]|^)(?:\d+|&amp;h[[:xdigit:]]*\b|&amp;o[0-7]*\b|&amp;b[01]*\b)(?=[^\w.&#x7F;-&#x10F7FF;]|$)</entryRegEx>
			</highlightContext>
			
			<highlightContext name="xojoPragma" fallback="directive">
				<entryRegEx>#(?:if|elseif|else|endif|pragma)</entryRegEx>
			</highlightContext>        
			
			<highlightContext name="xojoComment" fallback="comment">
				<startRegEx>'|\/\/|\brem\b</startRegEx>
				<endRegEx>[\n\r]</endRegEx>
					<highlightContext name="url" fallback="comment">
						<entryRegEx>(?:https?:\/\/)(?:[\w\-])+\.{1}(?:[a-zA-Z]{2,63})(?:[\/\w-]*)*\/?\??(?:[^ #\n\r]*)?#?(?:[^ \n\r]*)</entryRegEx>
					</highlightContext>
			</highlightContext>
			
			<highlightContext name="xojoString" fallback="string">
				<entryRegEx>"[^"\r\n]*["\r\n]|&amp;u[[:xdigit:]]*\b</entryRegEx>
			</highlightContext>
			
			<highlightContext name="xojoColorRed" fallback="colorRed">
					<entryRegEx>(?&lt;=&amp;c)[[:xdigit:]]{1,2}</entryRegEx>
			</highlightContext>
			
			<highlightContext name="xojoColorGreen" fallback="colorGreen">
					<entryRegEx>(?&lt;=&amp;c[[:xdigit:]]{2})[[:xdigit:]]{1,2}</entryRegEx>
			</highlightContext>
			
			<highlightContext name="xojoColorBlue" fallback="colorBlue">
					<entryRegEx>(?&lt;=&amp;c[[:xdigit:]]{4})[[:xdigit:]]{1,2}</entryRegEx>
			</highlightContext>
		</highlightContext>
		
		<highlightContext name="genericCodeFence" fallback="codeFence">
			<startRegEx>^```[[:alpha:]]*\n</startRegEx>
			<endRegEx>^```(\n|$)</endRegEx>
			
			<highlightContext name="codeFenceContents">
				<entryRegEx>^(?!```[[:alpha:]]?).*(\n|$)</entryRegEx>
			</highlightContext>
		</highlightContext>
	</contexts>
</highlightDefinition>