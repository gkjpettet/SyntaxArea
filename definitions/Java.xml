				<string>long</string>
				<string>short</string>
				<string>static</string>
				<string>void</string>
			</keywords>
		</highlightContext>
		<highlightContext name="number">
			<entryRegEx>(?&lt;=[^\w\d]|^)(((([0-9]+\.[0-9]*)|(\.[0-9]+))([eE][+\-]?[0-9]+)?[fFlL]?)|((([1-9][0-9]*)|0[0-7]*|(0[xX][0-9a-fA-F]+))(([uU][lL]?)|([lL][uU]?))?))(?=[^\w\d]|$)</entryRegEx>
		</highlightContext>
		<highlightContext name="character" fallback="string">
			<entryRegEx>('.')</entryRegEx>
		</highlightContext>
		<highlightContext name="function" highlightColor="#3369">
			<entryRegEx>([A-Za-z0-9_]+ *)(?=\()</entryRegEx>
		</highlightContext>
		
        <highlightContext name="preprocessor" fallback="directive">
			<regExes>
                <string>(^[ 	]*import([^\n\r])*)</string>
                <string>(^[ 	]*package([^\n\r])*)</string>
			</regExes>
		</highlightContext>
	</contexts>
</highlightDefinition>