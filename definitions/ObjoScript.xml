<?xml version="1.0" encoding="UTF-8"?>
<highlightDefinition version="1.5">
	<name>ObjoScript</name>

	<!-- Generic block -->
	<blockStartMarker indent="1">\{\s*(?:$|#)</blockStartMarker>
	<blockEndMarker>^\s*\}</blockEndMarker>
	
	<!-- Symbol definitions -->
	<!-- We take advantage of the fact that SyntaxArea will strip a trailing `{` from
	symbol names so we don't need to do a positive lookahead and we can include `{` in the
	regex -->
	<symbols>
		<symbol type="Class">
			<entryRegEx>^\s*class [^ {]*</entryRegEx>
		</symbol>
		<symbol type="Constructor">
			<entryRegEx>^\s*constructor\s*\((?:\w|,|\s)*\)\s*\{</entryRegEx>
		</symbol>
		<symbol type="Method">
			<entryRegEx>^\s*(static\s*)?\w*=?\s*\(?(?:\w|,|\s)*\)?\s*\{</entryRegEx>
		</symbol>
		
		<symbol type="PrefixOperator">
			<entryRegEx>^\s*(static\s*)?([-~]|not)\s*\(\)\s*\{</entryRegEx>
		</symbol>
	
		<symbol type="InfixOperator">
			<entryRegEx>^\s*(static\s*)?(\&amp;|\.\.|\.\.\.|\/|\&gt;|\&gt;\=|\&gt;\&gt;|is|\&lt;|\&lt;\=|\&lt;\&lt;|\-|\&lt;\&lt;|\%|\||\+|\*)\s*\(\w+\)\s*\{</entryRegEx>
		</symbol>
	
		<symbol type="SubscriptOperator">
			<entryRegEx>^\s*(static\s*)?\[\w(?:\w|\,\s)+\]\s*\{</entryRegEx>
		</symbol>
		
		<symbol type="SubscriptSetter">
			<entryRegEx>^\s*(static\s*)?\[\w+\]\=\(\w+\)\s*\{</entryRegEx>
		</symbol>
	</symbols>
	
	<contexts defaultColor="#000000" caseSensitive="yes">		
		<highlightContext name="Comment" highlightColor="#7F0000" italic="true">
			<startRegEx>#</startRegEx>
			<endRegEx>[\n\r]</endRegEx>
		</highlightContext>
		
		<highlightContext name="Number" highlightColor="#00FF00" caseSensitive="no">
			<entryRegEx>(?&lt;=[^\w.]|^)(?=\d+|\d+\.|\.\d+|\d+e(?:\d|\b))((?:\d+_\d+)+|\d+|\d*\.\d*(?:e[-+]?\d*)?|\d+e[-+]?\d*)(?=[^\w.]|$)|(?&lt;=[^\w.]|^)(?:\d+|0x[[:xdigit:]]*\b|0b[01]*\b)(?=[^\w.]|$)</entryRegEx>
		</highlightContext>
		
		<highlightContext name="String" highlightColor="#6500FE">
			<entryRegEx>"[^"\r\n]*["\r\n]</entryRegEx>
		</highlightContext>
	
		<highlightContext name="IntrinsicType" highlightColor="#0000FF" bold="false">
			<keywords>
				<string>Boolean</string>
				<string>KeyValue</string>
				<string>List</string>
				<string>Nothing</string>
				<string>Number</string>
				<string>String</string>
			</keywords>
		</highlightContext>
	
		<highlightContext name="Keyword" highlightColor="#0000FF" bold="false">
			<keywords>
				<string>and</string>
				<string>as</string>
				<string>assert</string>
				<string>breakpoint</string>
				<string>case</string>
				<string>class</string>
				<string>continue</string>
				<string>constructor</string>
				<string>do</string>
				<string>else</string>
				<string>exit</string>
				<string>export</string>
				<string>false</string>
				<string>for</string>
				<string>foreach</string>
				<string>foreign</string>
				<string>function</string>
				<string>if</string>
				<string>import</string>
				<string>in</string>
				<string>is</string>
				<string>loop</string>
				<string>not</string>
				<string>nothing</string>
				<string>or</string>
				<string>return</string>
				<string>static</string>
				<string>super</string>
				<string>switch</string>
				<string>then</string>
				<string>this</string>
				<string>true</string>
				<string>until</string>
				<string>var</string>
				<string>while</string>
				<string>xor</string>
			</keywords>
		</highlightContext>
	</contexts>
	
</highlightDefinition>