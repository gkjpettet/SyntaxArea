<?xml version="1.0" encoding="UTF-8"?>
<highlightDefinition version="1.5">
	<name>ObjoScript</name>

	<!-- Generic block -->
	<blockStartMarker indent="1">\{\s*(?:$|//|\'|\rem)</blockStartMarker>
	<blockEndMarker>^\s*\}</blockEndMarker>
	
	<!-- Symbol definitions -->
	<!-- We take advantage of the fact that SyntaxArea will strip a trailing `{` from
	symbol names so we don't need to do a positive lookahead and we can include `{` in the
	regex -->
	<symbols>
		<symbol type="Class">
			<entryRegEx>^\s*class [^ {]*</entryRegEx>
		</symbol>
		<symbol type="Constructor">
			<entryRegEx>^\s*constructor\s*\((?:\w|,|\s)*\)\s*\{</entryRegEx>
		</symbol>
		<symbol type="Method">
			<entryRegEx>^\s*(static\s*)?\w*=?\s*\(?(?:\w|,|\s)*\)?\s*\{</entryRegEx>
		</symbol>
		
		<symbol type="PrefixOperator">
			<entryRegEx>^\s*(static\s*)?([-~]|not)\s*\(\)\s*\{</entryRegEx>
		</symbol>
	
		<symbol type="InfixOperator">
			<entryRegEx>^\s*(static\s*)?(\&amp;|\.\.|\.\.\.|\/|\&gt;|\&gt;\=|\&gt;\&gt;|is|\&lt;|\&lt;\=|\&lt;\&lt;|\-|\&lt;\&lt;|\%|\||\+|\*)\s*\(\w+\)\s*\{</entryRegEx>
		</symbol>
	
		<symbol type="SubscriptOperator">
			<entryRegEx>^\s*(static\s*)?\[\w(?:\w|\,\s)+\]\s*\{</entryRegEx>
		</symbol>
		
		<symbol type="SubscriptSetter">
			<entryRegEx>^\s*(static\s*)?\[\w+\]\=\(\w+\)\s*\{</entryRegEx>
		</symbol>
	</symbols>
	
</highlightDefinition>